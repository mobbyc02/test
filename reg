    private void jToggleButtonCreateActionPerformed(java.awt.event.ActionEvent evt) {                                                    
        
        String firstname = jTextfirstname.getText();
        String lastname = jTextlastname.getText();
        String username = jTextusername.getText();
        String password = new String(jPassword.getPassword());
        String retypepassword = new String(jRetypepassword.getPassword());
        String email = jTextemail.getText();
        String address = jTextaddress.getText();
        
        if (firstname.isEmpty() || lastname.isEmpty() || username.isEmpty() || password.isEmpty() || retypepassword.isEmpty() || email.isEmpty() || address.isEmpty()) {
            
            JOptionPane.showMessageDialog(this, "Please fill in all fields.", "Error", JOptionPane.ERROR_MESSAGE);
        return; 
        
        }
        if (!password.equals(retypepassword)) {
            
            JOptionPane.showMessageDialog(this, "Passwords do not match.", "Error", JOptionPane.ERROR_MESSAGE);
            jPassword.setText("");
            jRetypepassword.setText("");
            return;
            
        }
        
        Login.User newUser = new Login.User(username, password);
        
        boolean registered = Login.UserService.registerUser(newUser);
        
        if (registered) {
            
            JOptionPane.showMessageDialog(this, "Registration successful!", "Success", JOptionPane.INFORMATION_MESSAGE);
            this.dispose();
            new Login().setVisible(true);
            
        }else {
            
            JOptionPane.showMessageDialog(this, "Username already exists. Please choose another one.", "Error", JOptionPane.ERROR_MESSAGE);
            jTextusername.setText("");
            
        }                    
    }                                                   

    private void jToggleButtonClearActionPerformed(java.awt.event.ActionEvent evt) {                                                   
        
        jTextfirstname.setText("");
        jTextlastname.setText("");
        jTextusername.setText("");
        jPassword.setText("");
        jRetypepassword.setText("");
        jTextemail.setText("");
        jTextaddress.setText("");
        
    }
